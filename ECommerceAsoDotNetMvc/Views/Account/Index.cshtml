@model ECommerceAsoDotNetMvc.Models.Customer
@{
    ViewBag.Title = "Index";
}

<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">

                        <h4>My Account</h4>

                        <div class="col-md-6">
                            <div class="aa-myaccount-register">


